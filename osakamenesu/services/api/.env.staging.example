# Staging Environment Variables for API

# Database Configuration (Railway)
DATABASE_URL=postgresql://user:pass@postgres.railway.internal:5432/osakamenesu_stg
DATABASE_POOL_SIZE=10

# Redis Configuration (Railway)
REDIS_URL=redis://default:password@redis.railway.internal:6379/0
RATE_LIMIT_REDIS_URL=redis://default:password@redis.railway.internal:6379/1

# Supabase Configuration
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key

# JWT Configuration
JWT_SECRET=your-staging-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# Environment
ENVIRONMENT=staging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=["https://staging-osakamenesu.vercel.app", "https://stg.osakamenesu.com"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_NAMESPACE=osakamenesu:staging

# Sentry Configuration
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging

# Security Headers
ENABLE_HSTS=true
ENABLE_CSP=true
CSP_REPORT_URI=https://api-stg.osakamenesu.com/api/csp-report

# Email Configuration (if different for staging)
EMAIL_FROM=noreply@stg.osakamenesu.com
EMAIL_PROVIDER=sendgrid

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_DEBUG_ENDPOINTS=true