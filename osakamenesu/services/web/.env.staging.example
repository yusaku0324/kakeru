# Staging Environment Variables for Web App

# API Configuration
NEXT_PUBLIC_API_URL=https://osakamenesu-api-stg.fly.dev
NEXT_PUBLIC_API_BASE=https://osakamenesu-api-stg.fly.dev

# Supabase Configuration (Staging)
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key

# Environment
NEXT_PUBLIC_ENVIRONMENT=staging
NODE_ENV=production

# Sentry Configuration (Staging)
NEXT_PUBLIC_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=false

# Optional: Basic Auth for Staging Protection
STAGING_AUTH_USER=admin
STAGING_AUTH_PASS=staging-password