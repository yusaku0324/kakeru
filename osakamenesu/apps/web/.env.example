# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_OSAKAMENESU_API_BASE=http://localhost:8000
API_BASE=http://localhost:8000
API_ADMIN_KEY=dev_admin_key

# QA Dashboard Configuration (optional)
# Set these to the UUIDs of frequently used shop and therapist for quick access
# Example:
# NEXT_PUBLIC_QA_FAVORITE_SHOP_ID=123e4567-e89b-12d3-a456-426614174000
# NEXT_PUBLIC_QA_FAVORITE_THERAPIST_ID=456e7890-e89b-12d3-a456-426614174001
NEXT_PUBLIC_QA_FAVORITE_SHOP_ID=
NEXT_PUBLIC_QA_FAVORITE_THERAPIST_ID=

# Analytics Configuration (optional)
# Replace with your actual analytics tracking IDs
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Sentry Error Monitoring Configuration (optional)
# Get your DSN from https://sentry.io/
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0
NEXT_PUBLIC_SENTRY_REPLAYS_ERROR_SAMPLE_RATE=1.0
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Slack Error Notifications (optional)
# Create a webhook URL from Slack: https://api.slack.com/messaging/webhooks
SLACK_ERROR_WEBHOOK_URL=

# Availability Fallback (optional)
# When enabled, shows demo availability slots for therapists without registered shifts
# Default: false (production should always be false to prevent user confusion)
NEXT_PUBLIC_ENABLE_AVAILABILITY_FALLBACK=false
